<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>standard-package</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- HDFS -->
<!--        <fileSet>
            <directory>${project.parent.basedir}/assembly/target/tmp/scripts</directory>
            <outputDirectory>HDFS/bin</outputDirectory>
            <includes>
                <include>run_on_edge.sh</include>
                <include>hive_manager.sh</include>
                <include>build_pm.sh</include>
                <include>build_pp.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>-->

        <fileSet>
            <directory>${project.parent.basedir}/spark/target/classes</directory>
            <outputDirectory>HDFS/conf</outputDirectory>
            <includes>
                <include>log4j.properties</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/spark/target/classes/avro</directory>
            <outputDirectory>HDFS/conf/avro</outputDirectory>
            <includes>
                <include>**/*.avsc</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/spark/target</directory>
            <outputDirectory>HDFS/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes</directory>
            <outputDirectory>HDFS/technical_components/oozie</outputDirectory>
            <includes>
                <include>bundle.xml</include>
                <include>*.keytab</include>
                <include>job.properties</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/coordinator</directory>
            <outputDirectory>HDFS/technical_components/oozie/coordinator</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/workflow</directory>
            <outputDirectory>HDFS/technical_components/oozie/workflow</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/scripts</directory>
            <outputDirectory>HDFS/technical_components/spark</outputDirectory>
            <includes>
                <include>run.sh</include>
                <include>run-bt.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/hive</directory>
            <outputDirectory>HDFS/technical_components/hive</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/scripts</directory>
            <outputDirectory>HDFS</outputDirectory>
            <includes>
                <include>start.sh</include>
                <include>stop.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/assembly/src/docs</directory>
            <outputDirectory>HDFS</outputDirectory>
            <includes>
                <include>readme.md</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/assembly/target/tmp/install</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>install.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- FS EDGE -->
        <fileSet>
            <directory>${project.parent.basedir}/assembly/target/tmp/scripts</directory>
            <outputDirectory>EDGE_FS/bin</outputDirectory>
            <includes>
                <include>run_on_edge.sh</include>
                <include>hive_manager.sh</include>
                <include>build_pm.sh</include>
                <include>build_pp.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/scripts</directory>
            <outputDirectory>EDGE_FS/bin</outputDirectory>
            <includes>
                <include>oozie_lib_tools.sh</include>
                <include>oozie_manager.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/spark/target/classes/avro</directory>
            <outputDirectory>EDGE_FS/conf/avro</outputDirectory>
            <includes>
                <include>**/*.avsc</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/oozie/target/classes/scripts</directory>
            <outputDirectory>EDGE_FS</outputDirectory>
            <includes>
                <include>start.sh</include>
                <include>stop.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/assembly/target/tmp/docs</directory>
            <outputDirectory>EDGE_FS</outputDirectory>
            <includes>
                <include>readme.md</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>

</assembly>
